{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": "Remove-Item",
			"args": [
				"${workspaceFolder}\\dist\\*",
				"-recurse",
				"-Exclude",
				"bilibiliPlayer.js",
				",comment.js",
				",video.js"
			],
			"detail": "清理生成目录",
			"label": "clear",
			"problemMatcher": []
		},
		{
			"type": "typescript",
			"tsconfig": "src/module/tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "编译模块文件",
			"label": "tsc-module"
		},
		{
			"type": "typescript",
			"tsconfig": "src/tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"detail": "编译index",
			"label": "tsc-index"
		},
		{
			"type": "shell",
			"command": "node",
			"args": [
				"${workspaceFolder}\\build\\resource.js",
				"${workspaceFolder}"
			],
			"dependsOn": [
				"tsc-index"
			],
			"detail": "发布前置：记录模块最新提交数据",
			"label": "resource",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"command": "node",
			"args": [
				"${workspaceFolder}\\build\\build.js",
				"${workspaceFolder}"
			],
			"dependsOn": [
				"resource"
			],
			"detail": "发布：生成最终脚本文件",
			"label": "build",
			"problemMatcher": []
		}
	]
}