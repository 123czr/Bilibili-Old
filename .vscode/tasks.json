{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "src/tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"label": "tsc",
			"detail": "编译TypeScript源码"
		},
		{
			"type": "shell",
			"command": "node",
			"args": [
				"${workspaceFolder}\\tasks\\apply.js",
				"${workspaceFolder}"
			],
			"dependsOn": [
				"tsc"
			],
			"label": "apply",
			"detail": "提取方法对照表",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"command": "node",
			"args": [
				"${workspaceFolder}\\tasks\\build.js",
				"${workspaceFolder}"
			],
			"dependsOn": [
				"apply"
			],
			"label": "build",
			"detail": "编译最终的用户脚本本体",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"command": "Remove-Item",
			"args": [
				"${workspaceFolder}\\dist\\*",
				"-recurse",
				"-Exclude",
				"bilibiliPlayer.js",
				",comment.js",
				",video.js",
				",README.md"
			],
			"dependsOn": [
				"build"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "清理生成目录",
			"label": "clear",
			"problemMatcher": []
		}
	]
}