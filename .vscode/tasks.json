{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"detail": "编译ts文件",
			"label": "tsc"
		},
		{
			"type": "shell",
			"command": "node",
			"args": [
				"${workspaceFolder}\\build\\resource.js",
				"${workspaceFolder}"
			],
			"dependsOn": [
				"tsc"
			],
			"detail": "生成@resource清单",
			"label": "resource",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"command": "node",
			"args": [
				"${workspaceFolder}\\build\\build.js"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": [
				"resource"
			],
			"detail": "生成最终文件",
			"label": "build",
			"problemMatcher": []
		},
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"detail": "监视并编译模块",
			"label": "tsc: 监视"
		}
	]
}