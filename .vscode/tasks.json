{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": "Remove-Item",
			"args": [
				"${workspaceFolder}\\JavaScript\\*",
				"-recurse",
				"-Exclude",
				"bilibiliPlayer.js",
				",comment.js",
				",video.js"
			],
			"detail": "清理生成目录",
			"label": "clear",
			"problemMatcher": []
		},
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"dependsOn": [
				"clear"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "编译ts文件",
			"label": "tsc"
		},
		{
			"type": "shell",
			"command": "node",
			"args": [
				"${workspaceFolder}\\build\\resource.js",
				"${workspaceFolder}"
			],
			"detail": "生成@resource清单",
			"label": "resource",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"command": "node",
			"args": [
				"${workspaceFolder}\\build\\build.js",
				"${workspaceFolder}"
			],
			"dependsOn": [
				"resource"
			],
			"detail": "生成最终文件",
			"label": "build",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"command": "node",
			"args": [
				"${workspaceFolder}\\build\\build-local.js",
				"${workspaceFolder}"
			],
			"dependsOn": [
				"resource"
			],
			"detail": "生成本地版本",
			"label": "build-local",
			"problemMatcher": []
		}
	]
}