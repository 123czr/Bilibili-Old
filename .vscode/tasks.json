{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": "Remove-Item",
			"args": [
				"${workspaceFolder}\\dist\\*",
				"-recurse",
				"-Exclude",
				"bilibiliPlayer.js",
				",comment.js",
				",video.js"
			],
			"detail": "清理生成目录",
			"label": "clear",
			"problemMatcher": []
		},
		{
			"type": "typescript",
			"tsconfig": "module/tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"dependsOn": [
				"clear"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "编译模块文件",
			"label": "module"
		},
		{
			"type": "typescript",
			"tsconfig": "src/tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"detail": "编译index",
			"label": "tsc"
		},
		{
			"type": "shell",
			"command": "node",
			"args": [
				"${workspaceFolder}\\build\\build.js",
				"${workspaceFolder}"
			],
			"dependsOn": [
				"tsc"
			],
			"detail": "生成最终脚本文件",
			"label": "merge",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"command": "Remove-Item",
			"args": [
				"${workspaceFolder}\\dist\\index.js"
			],
			"dependsOn": [
				"merge"
			],
			"detail": "清理临时文件",
			"label": "index",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"command": "node",
			"args": [
				"${workspaceFolder}\\build\\resource.js",
				"${workspaceFolder}"
			],
			"dependsOn": [
				"index"
			],
			"detail": "发布任务",
			"label": "build",
			"problemMatcher": []
		},
		{
			"type": "typescript",
			"tsconfig": "third/tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"detail": "编译第三方插件",
			"label": "third"
		}
	]
}