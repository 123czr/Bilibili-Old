{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "src/tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"label": "tsc"
		},
		{
			"type": "shell",
			"command": "node",
			"args": [
				"${workspaceFolder}\\.vscode\\apply.js",
				"${workspaceFolder}"
			],
			"label": "apply",
			"detail": "生成接口导出表apply.json",
			"problemMatcher": [],
			"dependsOn": [
				"tsc"
			]
		},
		{
			"type": "shell",
			"command": "node",
			"args": [
				"${workspaceFolder}\\.vscode\\require.js",
				"${workspaceFolder}"
			],
			"label": "require",
			"detail": "合成require资源require.js",
			"problemMatcher": [],
			"dependsOn": [
				"apply"
			]
		},
		{
			"type": "shell",
			"command": "node",
			"args": [
				"${workspaceFolder}\\.vscode\\local.js",
				"${workspaceFolder}"
			],
			"label": "local",
			"detail": "编译开发版脚本local.user.js",
			"problemMatcher": [],
			"dependsOn": [
				"require"
			]
		},
		{
			"type": "shell",
			"command": "node",
			"args": [
				"${workspaceFolder}\\.vscode\\main.js",
				"${workspaceFolder}"
			],
			"label": "main",
			"detail": "编译发行版脚本main.user.js",
			"problemMatcher": [],
			"dependsOn": [
				"require"
			]
		},
		{
			"type": "shell",
			"command": "Remove-Item",
			"args": [
				"${workspaceFolder}\\dist\\*",
				"-recurse",
				"-Exclude",
				"bilibiliPlayer.js",
				",comment.js",
				",require.js",
				",video.js",
				",README.md"
			],
			"dependsOn": [
				"local"
			],
			"detail": "开发环境下编译起点",
			"label": "develop",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"command": "Remove-Item",
			"args": [
				"${workspaceFolder}\\dist\\*",
				"-recurse",
				"-Exclude",
				"bilibiliPlayer.js",
				",comment.js",
				",require.js",
				",video.js",
				",README.md"
			],
			"dependsOn": [
				"main"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "发行环境下编译起点",
			"label": "release",
			"problemMatcher": []
		}
	]
}